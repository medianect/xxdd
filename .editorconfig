# https://editorconfig.org/

root = true

[*]
trim_trailing_whitespace = true
insert_final_newline	 = true
end_of_line		 = lf
charset			 = utf-8
tab_width		 = 8
indent_size		 = 8
indent_style		 = tab
max_line_length		 = 80

[{*.md,README}]
indent_size		 = 2
indent_style		 = space

[*.{dtd,html,wsdl,xml,xsd,xsl}]
indent_size		 = 2
indent_style		 = space

[*.patch]
trim_trailing_whitespace = false

[COMMIT_EDITMSG]
indent_size		 = 4
indent_style		 = space
